<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
            android:id="@+id/v_container"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

    <include layout="@layout/divider_gray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_height="60dp">

        <LinearLayout
                style="@style/home_tab_panel_style"
                android:id="@+id/tab_main">

            <ImageView
                    android:id="@+id/iv_tab_main"
                    style="@style/home_tab_iv_style"/>

            <TextView
                    android:id="@+id/tv_tab_main"
                    style="@style/home_tab_txt_style"
                    android:text="首页"/>
        </LinearLayout>

        <LinearLayout
                style="@style/home_tab_panel_style"
                android:id="@+id/tab_message">

            <ImageView
                    android:id="@+id/iv_tab_message"
                    style="@style/home_tab_iv_style"/>

            <TextView
                    android:id="@+id/tv_tab_message"
                    style="@style/home_tab_txt_style"
                    android:text="消息"/>
        </LinearLayout>

        <LinearLayout
                style="@style/home_tab_panel_style"
                android:id="@+id/tab_advice">

            <ImageView
                    android:id="@+id/iv_tab_advice"
                    style="@style/home_tab_iv_style"/>

            <TextView
                    android:id="@+id/tv_tab_advice"
                    style="@style/home_tab_txt_style"
                    android:text="征求"/>
        </LinearLayout>

        <LinearLayout
                style="@style/home_tab_panel_style"
                android:id="@+id/tab_square">

            <ImageView
                    android:id="@+id/iv_tab_square"
                    style="@style/home_tab_iv_style"/>

            <TextView
                    android:id="@+id/tv_tab_square"
                    style="@style/home_tab_txt_style"
                    android:text="广场"/>
        </LinearLayout>

        <LinearLayout
                style="@style/home_tab_panel_style"
                android:id="@+id/tab_my">

            <ImageView
                    android:id="@+id/iv_tab_my"
                    style="@style/home_tab_iv_style"/>

            <TextView
                    android:id="@+id/tv_tab_my"
                    style="@style/home_tab_txt_style"
                    android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
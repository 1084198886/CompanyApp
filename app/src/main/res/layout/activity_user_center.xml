<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/activity_header"/>

    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">

            <TableLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_height="wrap_content">

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>

                <TableRow style="@style/user_center_tabrow_style">

                    <ImageView
                            android:id="@+id/v_head_photo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitCenter"/>

                    <TextView
                            android:id="@+id/v_modify_headphoto"
                            style="@style/user_center_right_txt_style"
                            android:text="修改头像"/>

                    <include layout="@layout/arrow_right"/>

                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>

                <TableRow style="@style/user_center_tabrow_style">

                    <TextView
                            style="@style/user_center_left_txt_style"
                            android:text="标签"/>

                    <co.lujun.androidtagview.TagContainerLayout
                            android:id="@+id/v_tag_container"
                            style="@style/user_center_right_txt_style"/>

                    <include layout="@layout/arrow_right"/>

                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>


                <TableRow
                        android:id="@+id/panel_constellation"
                        style="@style/user_center_tabrow_style">

                    <TextView
                            style="@style/user_center_left_txt_style"
                            android:text="星座"/>

                    <TextView
                            android:id="@+id/v_constellation"
                            style="@style/user_center_right_txt_style"/>

                    <include layout="@layout/arrow_right"/>

                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>

                <TableRow
                        android:id="@+id/panel_userid"
                        style="@style/user_center_tabrow_style">

                    <TextView
                            style="@style/user_center_left_txt_style"
                            android:text="用户名"/>

                    <TextView
                            android:id="@+id/v_userid"
                            style="@style/user_center_right_txt_style"/>

                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>


                <TableRow
                        android:id="@+id/panel_signature"
                        style="@style/user_center_tabrow_style">

                    <TextView
                            style="@style/user_center_left_txt_style"
                            android:text="个人签名"/>

                    <TextView
                            android:id="@+id/v_signature"
                            style="@style/user_center_right_txt_style"/>

                    <include layout="@layout/arrow_right"/>

                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>

                <TableRow
                        style="@style/user_center_tabrow_style">

                    <TextView
                            style="@style/user_center_left_txt_style"
                            android:text="性别"/>

                    <TextView
                            style="@style/user_center_right_txt_style"
                            android:id="@+id/v_sex"/>
                </TableRow>

                <View
                        android:background="@color/light_gray"
                        android:layout_height="1dp"/>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:text="保存"
                android:id="@+id/v_save"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/v_age_picker_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:wheel_atmospheric="true"
                app:wheel_curved="false"
                app:wheel_cyclic="false"
                app:wheel_indicator="false"
                app:wheel_visible_item_count="2"
                app:wheel_item_align="center"
                app:wheel_item_text_color="#A7A7DB"
                app:wheel_curtain="true"
                app:wheel_item_text_size="18sp"
                app:wheel_selected_item_position="0"
                app:wheel_selected_item_text_color="#536D8A"
                android:layout_height="wrap_content"/>

        <com.aigestudio.wheelpicker.WheelPicker
                android:id="@+id/v_age_picker_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:wheel_atmospheric="true"
                app:wheel_curved="false"
                app:wheel_cyclic="false"
                app:wheel_indicator="false"
                app:wheel_visible_item_count="2"
                app:wheel_item_align="center"
                app:wheel_item_text_color="#A7A7DB"
                app:wheel_curtain="true"
                app:wheel_item_text_size="18sp"
                app:wheel_selected_item_position="0"
                app:wheel_selected_item_text_color="#536D8A"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
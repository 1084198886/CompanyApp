<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--所有activity取消默认描绘-->
    <style name="activity_default_style" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="activity_appcompat_style" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FloatingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="myProgressBarStyleLarge">
        <item name="android:indeterminateDrawable">@drawable/rotate_dialog_progress</item>
    </style>

    <style name="init_tab_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/init_tab_view_text</item>
    </style>

    <style name="init_login_input_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/init_tab_view_text</item>
    </style>

    <style name="init_login_input_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/init_input_text</item>
        <item name="android:layout_marginLeft">@dimen/init_login_input_text</item>
    </style>

    <style name="init_btn_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/init_login_btn_text</item>
        <item name="android:padding">@dimen/init_login_btn_padding</item>
        <item name="android:background">@color/btn_light_blue</item>
    </style>

    <style name="perfect_custinfo_right_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/perfect_custinfo_right_text</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="init_other_login_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--home页-->
    <style name="home_tab_panel_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_tab_iv_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="home_tab_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/home_tab_txt_top_margin</item>
        <item name="android:textSize">@dimen/home_tab_txt</item>
    </style>


    <!--我的-->
    <style name="my_label_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/my_label_txt</item>
    </style>

    <style name="my_grid_item_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/my_tab_row_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textSize">@dimen/my_grid_item_txt</item>
    </style>


    <!--设置-->
    <style name="setting_item_panel_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/setting_item_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/setting_item_horiz_padding</item>
        <item name="android:paddingRight">@dimen/setting_item_horiz_padding</item>
        <item name="android:paddingBottom">@dimen/setting_item_vertical_padding</item>
    </style>

    <style name="setting_item_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/setting_item_txt</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="setting_dialog_confirm_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/setting_dialog_btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/setting_dialog_btn_vertical_padding</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/setting_dialog_confirm_txt</item>
    </style>

    <style name="dialog_sex_select_txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dialog_sex_select_txt</item>
        <item name="android:padding">@dimen/dialog_sex_select_txt_padding</item>
    </style>


    <style name="user_center_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/perfect_custinfo_right_text</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="user_center_right_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/perfect_custinfo_right_text</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="user_center_tabrow_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="start_group_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="start_group_right_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="item_group_my_start_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
